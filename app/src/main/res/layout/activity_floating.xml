<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lrelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/image_ivfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_file"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="76dp" />
    <Button
        android:id="@+id/but_fab_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新建收藏夹"
        android:layout_alignBottom="@+id/image_ivfile"
        android:layout_toLeftOf="@+id/image_ivfile"
        android:layout_toStartOf="@+id/image_ivfile" />
    <ImageView
        android:id="@+id/image_ivwrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_write"
        android:layout_above="@+id/but_fab_file"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp" />
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新建笔记"
        android:layout_alignBottom="@+id/image_ivwrite"
        android:layout_alignLeft="@+id/but_fab_file"
        android:layout_alignStart="@+id/but_fab_file"
        android:id="@+id/but_fab_write"/>

</RelativeLayout>
